{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5",
    "types": [
      "vitest/globals",
      "node"
    ],
    "verbatimModuleSyntax": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "svgReact/*": [
        "./svgReact/*"
      ],
      "story-utils/*": [
        "./.storybook/utils/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      },
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "incremental": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "es2015",
        "es2016",
        "es2017",
        "es2020",
        "dom"
      ],
      "declaration": false,
      "outDir": "dist",
      "baseUrl": ".",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2020",
      "typeRoots": [
        "node_modules/@types",
        "build-utils/types"
      ],
      "plugins": [
        {
          "transform": "typescript-transform-paths"
        }
      ]
    },
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*",
    "babel.config.js",
    "eslint.config.mjs",
    "eslint.config.prod.mjs",
    "prettier.config.mjs",
    "postcss.config.mjs",
    "test-utils",
    "tsconfig.json",
    "vitest.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
